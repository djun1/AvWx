<Application
    x:Class="AvWx.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AvWx">    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="SettingsFlyoutHeaderBackgroundThemeBrush" Color="#FFA00000"/>
                    <SolidColorBrush x:Key="SettingsFlyoutBackgroundThemeBrush" Color="#FFFFFFFF"/>
                    <SolidColorBrush x:Key="TextBoxForegroundThemeBrush" Color="#FF000000"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
